{
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["build", "node_modules", "**/__tests__/*", "**/__mocks__/*"]
}
