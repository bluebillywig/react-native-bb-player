{
  "name": "@bluebillywig/react-native-bb-player",
  "version": "1.0.0",
  "description": "Blue Billywig Native Video Player for React Native - iOS AVPlayer and Android ExoPlayer integration",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index.ts",
  "source": "src/index.ts",
  "exports": {
    ".": {
      "import": "./lib/module/index.js",
      "require": "./lib/commonjs/index.js",
      "types": "./lib/typescript/src/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "prepare": "bob build",
    "build": "bob build",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{js,ts,tsx}\"",
    "clean": "rm -rf lib"
  },
  "files": [
    "src",
    "lib",
    "ios",
    "android",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "react-native-bb-player.podspec",
    "react-native.config.js",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "keywords": [
    "react-native",
    "blue-billywig",
    "video-player",
    "native-player",
    "avplayer",
    "exoplayer",
    "ios-video",
    "android-video",
    "fullscreen-video",
    "video-streaming"
  ],
  "author": "Blue Billywig",
  "license": "MIT",
  "homepage": "https://github.com/bluebillywig/react-native-bb-player#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/bluebillywig/react-native-bb-player.git"
  },
  "bugs": {
    "url": "https://github.com/bluebillywig/react-native-bb-player/issues"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.73.0"
  },
  "devDependencies": {
    "@types/react": "~18.2.0",
    "react": "18.2.0",
    "react-native": "0.73.0",
    "react-native-builder-bob": "^0.23.0",
    "typescript": "~5.3.0"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
